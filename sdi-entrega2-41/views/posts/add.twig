{% extends "layout.twig" %}

{% block title %} Agregar canción {% endblock %}

{% block body %}
<h2>Agregar publicación</h2>

<form class="form-horizontal" method="post" action="/posts/add">

    <div class="form-group">
        <label class="control-label col-sm-2" for="title">Título:</label>
        <div class="col-sm-10">
            <input id="title" type="text" class="form-control" name="title"
                   placeholder="Título de la publicación" required/>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2" for="content">Contenido:</label>
        <div class="col-sm-10">
            <input id="content" type="text" class="form-control" name="content"
                   placeholder="Contenido de la publicación" required/>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Publicar</button>
        </div>
    </div>

</form>

{% endblock %}