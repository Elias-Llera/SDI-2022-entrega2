{% extends "layout.twig" %}

{% block title %} Registrar usuario {% endblock %}

{% block body %}
  <h2>Registrar usuario</h2>
  <form class="form-horizontal" method="post" action="/users/signup"  >
    <div class="form-group">
      <label class="control-label col-sm-2" for="email">Email:</label>
      <div class="col-sm-10">
        <input id="email" type="email" class="form-control" name="email"
            placeholder="email@email.com" required="true" />
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="name">Nombre:</label>
      <div class="col-sm-10">
        <input id="name" type="text" class="form-control" name="name"
               placeholder="Fernando" required="true" />
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="surname">Apellido:</label>
      <div class="col-sm-10">
        <input id="surname" type="text" class="form-control" name="surname"
               placeholder="Alonso" required="true" />
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="password">Password:</label>
      <div class="col-sm-10">          
        <input  id="password" type="password"  class="form-control" name="password"
        	placeholder="contraseÃ±a" required="true" />
      </div>
    </div>
    <div class="form-group">        
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-primary">Registrar</button>
      </div>
    </div>
  </form>
{% endblock %}