{% extends "layout.twig" %}
{% block title %} Tienda – uoMusic {% endblock %}
{% block body %}

    <h2>Amigos</h2>

    <!-- Listado de usuarios -->
    <div class="table-responsive">
        {% if friends|length == 0 %}
        <h3>Todavía no tienes amigos</h3>
        {% else %}
        <table class="table table-hover" id="tableUsers">
            <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Surname</th>
                <th scope="col">Email</th>
                <th scope="col"></th>
                <th scope="col"></th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody>
            {% for friend in friends %}
                <tr>
                    <td scope="row" >{{ friend.name }}</td>
                    <td scope="row" >{{ friend.surname }}</td>
                    <td scope="row" >{{ friend.email }}</td>
                    <td scope="row">
                        <a href="\posts\{{ friend.email }}">
                            <button class="btn">Publicaciones</button>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {% endif %}
    </div>

    <!-- Paginación mostrar la actual y 2 anteriores y dos siguientes -->
    <div class="row text-center">
        <ul class="pagination">
            {% for page in pages %}
                <li class="page-item" id="pi-{{ page }}">
                    <a class="page-link" href="/friendships/friends?page={{ page }}"> {{ page }}</a>
                </li>
            {% endfor %}
            <script>
                $("#pi-" + "{{ currentPage }}").addClass("active");
            </script>
        </ul>
    </div>

{% endblock %}
