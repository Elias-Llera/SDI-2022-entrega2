{% extends "layout.twig" %}
{% block title %} Tienda – uoMusic {% endblock %}
{% block body %}

    <h2>Amigos</h2>

    <!-- Listado de usuarios -->
    <div class="row">
        {% for friend in friends %}
            <div class="col-xs-6 col-sm-6 col-md-4 col-lg-3">
                <div style="width:200px">
                    <div>{{ friend.name }} </div>
                    <div>{{ friend.surname }} </div>
                    <div>{{ friend.email }}</div>
                    <a href="\posts\{{ friend.email }}">
                        <div>Publicaciones</div>
                    </a>
                </div>
            </div>
        {% endfor %}
    </div>

    <!-- Paginación mostrar la actual y 2 anteriores y dos siguientes -->
    <div class="row text-center">
        <ul class="pagination">
            {% for page in pages %}
                <li class="page-item" id="pi-{{ page }}">
                    <a class="page-link" href="/friendships/friends?page={{ page }}"> {{ page }}</a>
                </li>
            {% endfor %}
            <script>
                $("#pi-" + "{{ currentPage }}").addClass("active");
            </script>
        </ul>
    </div>

{% endblock %}
